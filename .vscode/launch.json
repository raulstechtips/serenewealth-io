{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Backend",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py",
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "runserver",
                "0.0.0.0:8000",
            ],
            "django": true,
        },
        {
            "name": "makemigrations",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py",
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "makemigrations"
            ],
            "django": true
        },
        {
            "name": "migrate",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py",
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "migrate"
            ],
            "django": true
        },
        {
            "name": "collect static",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py",
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "collectstatic",
                "--noinput",
            ],
            "django": true
        },
        {
            "name": "Empty DB",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py",
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "flush"
            ],
            "django": true
        },
        {
            "name": "createsuperuser",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py",
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "createsuperuser"
            ],
            "django": true
        },
        {
            "name": "Setup Sites",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py",
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "setup_sites"
            ],
            "django": true
        },
    ]
}